<!DOCTYPE html>
<html>
    <head>
        <!-- Make site responsive on mobile/tablet -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Rhapsody</title>
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.1/css/all.min.css">
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body>
        <nav id="mainNavbar" class="navbar navbar-expand-lg navbar-light navbar-expand-md py-0 fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a href="/" class="navbar-brand">Rhapsody</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler">
                        <span class="navbar-toggler-icon"></span>
                        </button>
                </div>
                <div class="collapse navbar-collapse" id="navbarToggler">
                    <ul class="navbar-nav ml-auto">
                        <% if(!currentUser){ %>
                            <li class="nav-item">
                                <a class="nav-link" href="/login">
                                    Login
                                    <i class="fa fa-user" aria-hidden="true"></i>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/register">
                                    Sign Up
                                    <i class="fas fa-user-plus"></i>
                                </a>
                            </li>
                        <% } else { %>
                            <% if(currentUser && currentUser.isAdmin) { %>

                            <% } %>
                            <li class="dropdown nav-link">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Notifications <span class="badge"><%= notifications.length %></span></a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="nav-link dropdown-item" href="/notifications">View past notifications</a>
                                    <div class="dropdown-divider"></div>
                                    <% notifications.forEach(function(notification) { %>                          
    
                                        <a href="/notifications/<%= notification.id %>">
                                            <%= notification.username %> created a new campground
                                        </a>
    
                                    <% }); %>
                                </div>
                              </li>

                            <li class="nav-item"><a class="nav-link" href="/users/<%= currentUser._id %>">Signed in as <%= currentUser.username %></a></li>
                            <li class="nav-item">
                                <a class="nav-link" href="/logout">
                                    Logout
                                    <i class="fas fa-sign-out-alt"></i>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </nav>          

        <div class="container" style="margin-top: 3rem">
            <% if(error && error.length > 0) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
            <% } %>
            <% if(success && success.length > 0) { %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
            <% } %>
        </div>                

